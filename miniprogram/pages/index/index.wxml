<view>
    <image src="../../images/logo.png" mode="widthFix" class="logo"></image>
   <icon type="search" color="white" size="24" class="icon" bindtap="search"></icon>
</view>
<image class="top-image" src="{{bannerList[activeBannerIndex].url}}" mode="widthFix"></image>
