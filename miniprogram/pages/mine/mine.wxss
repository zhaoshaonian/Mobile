}
.container {
  width: 100%;
  height: 100%;
  padding: 0;
  background: #f5f7f9;
  justify-content: unset;
}

.container .vip {
 width: 100%;
 height: auto;
 padding: 43rpx 0 37rpx 0;
 position: relative;
 background: #fff;
 border-top: 1rpx solid #e2e2e2;
}
.container .vip ::after{
  content: '';
  display: inline-block;
  width: 8px;
  height: 8px;
  border-top: 1px solid #656565;
  border-right: 1px solid #656565;
  transform: rotate(45deg);
  position: absolute;
  right: 20px;
}
.container .vip image {
 width: 52rpx;
 position: absolute;
 left: 36rpx;
 top: 41rpx;
}
.container .vip text{
 display: block;
 font-size: 26rpx;
 margin-left: 119rpx;
}
.container .vip .h2 {
 font-size: 28rpx;
 line-height:52rpx;
}

